package com.cts.oopsassignment;

public class Number {

	public int add(int x, int y) {
		return x + y;
	}

	public int big(int a, int b) {
		if (a > b)
			return a;
		else
			return b;
	}

	public boolean evenOdd(int c) {

		if (c % 2 == 0)
			return true;
		else
			return false;

	}

	public String average(int x, int y, int z) {
		int Avg;
		Avg = (x + y + z) / 3;
		switch (Avg / 10) {
		case 9:
			return "A+";
		case 8:
			return "A";
		case 7:
			return "A-";
		case 6:
			return "B+";
		case 5:
			return "B";
		case 4:
			return "Fail";
		case 3:
			return "Fail";
		case 2:
			return "Fail";
		case 1:
			return "Fail";
		case 0:
			return "Fail";
		}
		return "";
	}

	public int getSumOfDigits(int p) 
		{
			int sum = 0, rem;
			for (; p > 0;) {
				rem = p % 10;
				sum = sum + rem;
				p = p / 10;
			}
			return sum;
		}
public void displayNaturalNumbers()
{
for(int i=1;i<11;i++)
	System.out.println(+i);
}
